<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:text="  Email Verification"
        android:textColor="#3F4144"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/round_arrow_back_24"

        />

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#EDEDED"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the code sent to your email"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend code in 23s"
        android:textSize="17dp"
        android:layout_marginTop="15dp"
        android:textColor="#EF8305"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
        android:layout_margin="15dp"
            android:background="@drawable/code_background"
            ></TextView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/code_background"
            ></TextView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/code_background"
            ></TextView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/code_background"
            android:layout_margin="15dp"
            ></TextView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/code_background"
            android:layout_margin="15dp"
            ></TextView>

    </LinearLayout>

