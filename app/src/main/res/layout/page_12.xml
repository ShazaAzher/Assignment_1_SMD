<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/cross_24"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Item"
        android:textColor="#3F4144"
        android:textSize="25dp"
        android:textStyle="bold"

        />

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EDEDED"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ButtonTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dot"
            android:drawableTop="@mipmap/rent_camera"
            android:paddingTop="10dp"
           android:drawablePadding="-40dp"
            android:text="Upload Image"
            android:textAllCaps="false"
            android:textColor="#EF8305"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            style="?android:attr/borderlessButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ButtonTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dot"
            android:drawableTop="@mipmap/rent_video"
            android:paddingTop="10dp"
            android:drawablePadding="-40dp"
            android:text="Upload Video"
            android:textAllCaps="false"
            android:textColor="#EF8305"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            style="?android:attr/borderlessButtonStyle"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Name"
        android:textColor="#3F4144"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_view_shape"
        android:hint="Enter item name"
        android:paddingLeft="10dp"
        android:textColorHint="#56595D"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Hourly Rate"
        android:textColor="#3F4144"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_view_shape"
        android:hint="Enter hourly rate"
        android:paddingLeft="10dp"
        android:textColorHint="#56595D"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Description"
        android:textColor="#3F4144"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_view_shape"
        android:hint="Enter description"
        android:gravity="top"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:textColorHint="#56595D"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="City"
        android:textColor="#3F4144"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_view_shape"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    >
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="#EEEEEE"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"

        />

    <EditText
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_view_shape"
        android:hint=" Select City"
        android:paddingLeft="10dp"
        android:textColorHint="#56595D"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drop_down"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        />


</RelativeLayout>






    <androidx.appcompat.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/button_shape"
        android:layout_marginTop="100dp"
        android:text="Post Item"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />




</LinearLayout>